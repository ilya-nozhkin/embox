
package genconfig

configuration conf {
	@Runlevel(0) include embox.arch.xtensa.kernel.boot
	@Runlevel(0) include embox.arch.xtensa.kernel.arch
    @Runlevel(0) include embox.arch.xtensa.locore
    @Runlevel(0) include embox.arch.xtensa.libarch

	@Runlevel(0) include embox.kernel.stack(stack_size=1536,alignment=4)

	@Runlevel(0) include embox.driver.interrupt.esp8266_intc
	@Runlevel(0) include embox.driver.clock.esp8266_timer
	@Runlevel(0) include embox.driver.serial.esp8266_uart(baud_rate=115200)
	@Runlevel(0) include embox.driver.diag(impl="embox__driver__serial__esp8266_uart")

	include embox.kernel.task.single
	include embox.kernel.task.resource.idesc_table(idesc_table_size=6)

	@Runlevel(1) include embox.kernel.timer.sys_timer(timer_quantity=4)
	@Runlevel(1) include embox.kernel.timer.strategy.list_timer
	@Runlevel(1) include embox.kernel.time.kernel_time
	@Runlevel(1) include embox.kernel.timer.itimer(itimer_quantity=4)

	include embox.kernel.lthread.lthread

	include embox.kernel.thread.core(thread_pool_size=1)
	include embox.kernel.thread.signal_stub

	/* tty requires */
	/*include embox.kernel.thread.mutex*/
	/*include embox.driver.tty.tty(rx_buff_sz=16, io_buff_sz=16)*/
	include embox.driver.char_dev_stub
	include embox.driver.tty.task_breaking_disable

	@Runlevel(2) include embox.cmd.shell
	include embox.init.setup_tty_diag
	@Runlevel(3) include embox.init.start_script(shell_name="diag_shell")
    
    include embox.cmd.help

	//include embox.cmd.help
	include embox.cmd.sys.version

	include embox.kernel.critical
	include embox.kernel.irq_static
	include embox.mem.pool_adapter

	include embox.compat.libc.stdio.print(support_floating=0)
    include third_party.lib.NoOpenLibm
}
